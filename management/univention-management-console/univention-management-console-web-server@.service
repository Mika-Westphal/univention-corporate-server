[Unit]
Description=Univention Management Console Web Server
After=network.target remote-fs.target univention-management-console-server.service
Before=apache2.service
PartOf=umc_parallel.target
ReloadPropagatedFrom=umc_parallel.target

[Service]
Type=forking
PIDFile=/var/run/umc-web-server%i.pid
Environment=UMC_PORTS=%i
ExecStart=/usr/sbin/univention-management-console-web-server-parallel-wrapper %i
ExecReload=/bin/kill -HUP $MAINPID
User=root
Group=root

[Install]
WantedBy=umc_parallel.target
