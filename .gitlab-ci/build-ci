#!/bin/sh
# shellcheck disable=SC2016
set -e -u

exec >generated-config-doc.yml
cat "${0%/*}/base.yml"
cat "${0%/*}/base-doc.yml"

for make in doc/*/Makefile
do
	[ -f "$make" ] || continue
	path="${make%/Makefile}"
	pkg="${path##*/}"
	echo
	echo "build ${pkg}:"
	echo '  variables:'
	echo "    base: $path"
	echo '  extends: .doc'
	echo '  rules:'
	echo '    - if: "$CI_COMMIT_MESSAGE =~ /skip-doc/ || $pipeline =~ /skip-doc/"'
	echo '      when: never'
	echo '    - if: "$CI_COMMIT_MESSAGE =~ /force-doc/ || $pipeline =~ /force-doc/"'
	echo '      when: always'
	echo '    - changes:'
	echo "      - ${path}/**/*"
	echo '      when: always'
done
